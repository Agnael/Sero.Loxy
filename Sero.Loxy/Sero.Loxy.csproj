<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Oleg Kuzmych</Authors>
    <Company>Oleg KuzmychOleg Kuzmych</Company>
    <Description>High level event-driven logging framework for scoped processes</Description>
    <PackageLicenseExpression>GPL-3.0-only</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/Agnael/Sero.Loxy</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Agnael/Sero.Loxy</RepositoryUrl>
    <RepositoryType>GitHub</RepositoryType>
    <PackageTags>request logging scoped logger</PackageTags>
    <Version>1.0.1</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="2.2.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="2.2.0" />
    <PackageReference Include="Sero.Core" Version="1.0.7" />
  </ItemGroup>

</Project>
